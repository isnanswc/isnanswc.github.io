            width: 100%;
            max-width: 600px; /* Batasi lebar container */
        }

        h1, h2 {
            color: #333;
            margin-bottom: 20px;
        }

        #reader {
            width: 100%;
            max-width: 400px; /* Batasi lebar area scan */
            margin: 0 auto 20px auto;
            border: 1px solid #ddd;
            border-radius: 5px;
            overflow: hidden; /* Penting agar video tidak keluar batas */
        }

        .button {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
